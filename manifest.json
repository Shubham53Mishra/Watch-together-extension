{
  "manifest_version": 3,
  "name": "Watch Sync - Netflix + YouTube",
  "version": "1.0",
  "description": "Sync Netflix, YouTube & YouTube TV playback using Socket.io",
  "permissions": ["scripting", "tabs"],
  "host_permissions": [
    "https://www.netflix.com/*",
    "*://*.youtube.com/*",
    "*://*.youtube.tv/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.netflix.com/*",
        "*://*.youtube.com/*",
        "*://*.youtube.tv/*"
      ],
      "js": ["socket.js", "content.js"]
    }
  ],
  "action": {
    "default_title": "Watch Together Sync"
  }
}
